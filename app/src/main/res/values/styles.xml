<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:label">@string/app_name</item>
        <item name="logo">@mipmap/hobbyt_launcher</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:label">@string/app_name</item>
        <item name="logo">@mipmap/hobbyt_launcher</item>
    </style>

    <style name="AppTheme.Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/category_button</item>
    </style>

        <style name="starRatingBar" parent="@android:style/Widget.RatingBar">
            <item name="android:progressDrawable">@drawable/ratingstars</item>
            <item name="android:minHeight">40dip</item>
            <item name="android:maxHeight">40dip</item>
            <item name="android:shadowDx">0</item>
            <item name="android:shadowDy">0</item>
        </style>

    <style name="success" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/success</item>
    </style>


</resources>
